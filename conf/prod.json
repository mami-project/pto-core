{
  "environment": "prod",
  "sensor": {
    "mongo_uri": "mongodb://prod-sensor:change_me@localhost/"
  },
  "supervisor": {
    "mongo_uri": "mongodb://prod-supervisor:change_me@localhost/",
    "listen_port": 33424,
    "spark": {
      "path": "/path/to/spark-XX-bin-hadoopYY/",
      "config": {
        "spark.master": "local[*]",
        "spark.driver.memory": "4g",
        "spark.executor.memory": "4g"
      }
    },
    "distributed": {
      "address": "127.0.0.1:8706"
    }
  },
  "validator": {
    "mongo_uri": "mongodb://prod-validator:change_me@localhost/"
  },
  "admin": {
    "mongo_uri": "mongodb://prod-admin:change_me@localhost/",
    "static_path": "path/to/pto-admin",
    "listen_host": "0.0.0.0",
    "listen_port": 5000
  },

  "metadata_coll": ["uploads", "uploads"]
}
